<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nz.kiwidevs.kiwibug.TagActivity">


    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/CongratsMsg"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lastFinderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/lastFinderText"
        android:layout_below="@+id/congrats"
        android:layout_alignRight="@+id/congrats"
        android:layout_alignEnd="@+id/congrats" />

    <TextView
        android:id="@+id/nfcUserMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Sorry, no message left!"
        android:textAlignment="textStart"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="24sp"
        android:layout_below="@+id/lastFinderText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
